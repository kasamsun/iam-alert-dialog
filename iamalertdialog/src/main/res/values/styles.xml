<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alert_dialog_light" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>

        <item name="sweet_alert_bg_drawable">@drawable/dialog_background</item>
        <item name="sweet_alert_title_text_color">@color/title_color</item>
        <item name="sweet_alert_content_text_color">@color/message_color</item>
    </style>

    <style name="alert_dialog_dark" parent="alert_dialog_light">
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="sweet_alert_bg_drawable">@drawable/dialog_background_dark</item>
        <item name="sweet_alert_title_text_color">@color/title_color_dark</item>
        <item name="sweet_alert_content_text_color">@color/message_color_dark</item>
    </style>


    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">85dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle.Normal" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Header" parent="TextStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextStyle.EditText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">@color/blue_lighten_3</item>
    </style>

    <style name="TextInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button_round_ripple_transparent</item>
    </style>

    <style name="AlertDialog.Button" parent="AlertDialogButton">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="AlertDialog.Button.Negative" parent="AlertDialogButton">
        <item name="android:textColor">@color/pink</item>
    </style>
    <style name="AlertDialog.Button.Neutral" parent="AlertDialogButton">
        <item name="android:textColor">@color/teal</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_round_ripple</item>
    </style>

    <style name="Button.Negative" parent="Button">
        <item name="android:background">@drawable/button_round_ripple_neg</item>
    </style>

    <style name="Button.Neutral" parent="Button">
        <item name="android:background">@drawable/button_round_ripple_neu</item>
    </style>

</resources>