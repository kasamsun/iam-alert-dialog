<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_darken_3</item>
        <item name="colorAccent">@color/blue_accent_2</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextStyle.Normal" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Header" parent="TextStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_round_ripple</item>
    </style>

</resources>