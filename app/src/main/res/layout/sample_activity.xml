<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Header"
            android:layout_margin="16dp"
            android:text="I am Toast" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Show material progress" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_dialog"
            style="@style/Button.Neutral"
            android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A basic message" />

        <Button
            android:id="@+id/basic_test"
            style="@style/Button.Neutral"
            android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A title with a text under" />

        <Button
            android:id="@+id/under_text_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="show error message" />

        <Button
            android:id="@+id/error_text_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A success message" />

        <Button
            android:id="@+id/success_text_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A warning message, with a listener bind to the Confirm-button..." />

        <Button
            android:id="@+id/warning_confirm_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A warning message, with listeners bind to Cancel and Confirm button..." />

        <Button
            android:id="@+id/warning_cancel_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A message with a custom icon" />

        <Button
            android:id="@+id/custom_img_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="A message with neutral button" />

        <Button
            android:id="@+id/neutral_btn_test"
            style="@style/Button.Neutral"
             android:layout_margin="8dp"
            android:text="Try me!" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Button icon" />

        <Button
            android:id="@+id/button_icon_test"
            style="@style/Button"
            android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Vertical button" />

        <Button
            android:id="@+id/vertical_btn_test"
            style="@style/Button"
             android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Custom button colors" />

        <Button
            android:id="@+id/custom_btn_colors_test"
            style="@style/Button"
             android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Single selection" />

        <Button
            android:id="@+id/single_selection_test"
            style="@style/Button"
            android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Single selection with icon and selection" />

        <Button
            android:id="@+id/custom_single_selection_test"
            style="@style/Button"
            android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Single selection with button list, custom icon,color" />

        <Button
            android:id="@+id/button_selection_test"
            style="@style/Button"
            android:layout_margin="8dp"
            android:text="Try me! ** New **" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextStyle.Normal"
            android:text="Number input test" />

        <Button
            android:id="@+id/number_input_test"
            style="@style/Button"
            android:layout_margin="8dp"
            android:text="Try me! ** New **" />

    </LinearLayout>

</ScrollView>

